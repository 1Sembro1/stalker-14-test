<controls:FancyWindow xmlns="https://spacestation14.io"
                xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                MinSize="400 500"
                Title="{Loc 'bands-managing-window-title'}"> <!-- Localization key needed -->

    <BoxContainer Orientation="Vertical" HorizontalExpand="True" Margin="10" SeparationOverride="10">

        <!-- Band Info -->
        <BoxContainer Orientation="Horizontal">
            <Label Text="{Loc 'bands-managing-window-band-name-label'}" /> <!-- Localization key needed -->
            <Label Name="BandNameLabel" Text="{Loc 'bands-managing-window-band-name-placeholder'}" StyleClasses="LabelSecondaryColor" HorizontalExpand="True" Align="Right" /> <!-- Localization key needed -->
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Label Text="{Loc 'bands-managing-window-band-members-label'}" /> <!-- Localization key needed -->
            <Label Name="BandMemberCountLabel" Text="0 / 0" StyleClasses="LabelSecondaryColor" HorizontalExpand="True" Align="Right" />
        </BoxContainer>

        <!-- Separator -->
        <Control MinHeight="5" />
        <PanelContainer>
            <PanelContainer.PanelOverride>
                <gfx:StyleBoxFlat BackgroundColor="#202025" />
            </PanelContainer.PanelOverride>
            <Label Text="{Loc 'bands-managing-window-members-list-header'}" Align="Center" /> <!-- Localization key needed -->
        </PanelContainer>

        <!-- Members List -->
        <PanelContainer VerticalExpand="True">
            <PanelContainer.PanelOverride>
                <gfx:StyleBoxFlat BackgroundColor="#1B1B1E" />
            </PanelContainer.PanelOverride>

            <ScrollContainer HorizontalExpand="True" VerticalExpand="True">
                <!-- Member entries will be added here dynamically -->
                <BoxContainer Name="MembersList" Orientation="Vertical" Margin="4" HorizontalExpand="True">
                    <Label Name="NoMembersLabel" Text="{Loc 'bands-managing-window-no-members-text'}" StyleClasses="LabelSecondaryColor" /> <!-- Localization key needed -->
                </BoxContainer>
            </ScrollContainer>
        </PanelContainer>

        <!-- Separator -->
        <Control MinHeight="5" />
        <PanelContainer>
            <PanelContainer.PanelOverride>
                <gfx:StyleBoxFlat BackgroundColor="#202025" />
            </PanelContainer.PanelOverride>
            <Label Text="{Loc 'bands-managing-window-add-member-header'}" Align="Center" /> <!-- Localization key needed -->
        </PanelContainer>

        <!-- Add Member Section -->
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
            <Label Text="{Loc 'bands-managing-window-player-name-label'}" MinWidth="80" /> <!-- Localization key needed -->
            <LineEdit Name="AddMemberLineEdit" PlaceHolder="{Loc 'bands-managing-window-player-name-placeholder'}" HorizontalExpand="True" MinWidth="150"/> <!-- Localization key needed -->
            <Button Name="AddMemberButton" Text="{Loc 'bands-managing-window-add-button'}" MinWidth="80" Margin="5 0 0 0"/> <!-- Localization key needed -->
        </BoxContainer>

        <!-- TODO: Add section for other actions like Disband -->

    </BoxContainer>
</controls:FancyWindow>
